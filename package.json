{
	"name": "iarproject",
	"displayName": "IarProject",
	"publisher": "greghoeppner",
	"description": "Allows the adding of files to your IAR projects without having to open IAR.",
	"repository": {
		"type": "git",
		"url": "https://github.com/greghoeppner/IarProjectExtension"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.addToIarProject"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"explorer/context": [
				{
					"when": "config.iarproject.projectFile != null && !explorerResourceIsFolder && resourceLangId == cpp || resourceLangId == c",
					"command": "extension.addToIarProject"
				}
			]
		},
		"commands": [
			{
				"command": "extension.addToIarProject",
				"title": "Add to IAR Project"
			}
		],
		"configuration": {
			"title": "IAR Project",
			"properties": {
				"iarproject.projectFile": {
					"type": "string",
					"scope": "resource",
					"description": "The project file for IAR",
					"default": null
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"xml2js": "^0.4.23",
		"xmljs": "^0.3.2"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
